@import var
html
body
.page
.body
    height 100%
    font 13px/1.6 font
.box
    height 100%
    clearfix();
.side
    width sideWidth
    height 100%
    float left
    color #404040
    padding 0 10px
    background url(/images/bg.png)
    box-shadow inset 0 0 5px #CCC
    header
        padding 20px 0
        h1
            color #D4382B
            font-size 32px
            line-height 40px
            height 40px
            padding 20px 0
            margin-top -20px
            text-align center
            font-weight normal
            text-shadow 1px 1px 0 #FFF
    section
        margin 20px 0 0
        padding-bottom 10px
        border-bottom 1px solid #DFDFDF
        box-shadow 0 1px 1px #FAFAFA
        h1
            padding 5px 0
            font-size 16px
    .btns
        margin 0
        padding 0
        border none
        box-shadow none
        .btn
            margin 5px 0
.main
    height 100%
    overflow-y auto
    margin-left sideWidth + 20

.btn
    color #FFF
    font-size 14px
    font-family "Lato", sans-serif
    border none
    padding 8px 0
    text-decoration none
    text-align center
    display block
    box-sizing border-box
    width 100%
    line-height 20px
    cursor pointer
    border-radius 6px
    background #34495e
.btn:hover
    text-decoration none
    background #4e6d8d
.btn-green
    background #1abc9c
.btn-green:hover
    background #2fe2bf
.btn-blue
    background #3498db
.btn-blue:hover
    background #5dade2
.btn-gray
    color #404040
    background #CCC
.btn-gray:hover
    background #DDD
.btn-darkblue
    color #fff
    background #34495e
.btn-darkblue:hover
    background #415b76

.i-text
    padding 3px 5px
    border 1px solid #CCC
pre
    font-family courier new, courier, monospace
    white-space pre-wrap

// clearfix from nib
.clearfix
    clearfix()
